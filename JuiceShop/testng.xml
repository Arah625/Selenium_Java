<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <listeners>
        <listener class-name="reports.TestListener"/>
        <listener class-name="reports.AnnotationTransformer"/>
    </listeners>
    <test name="Test">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserMode" value="INCOGNITO"/>
        <parameter name="maxRetryCount" value="0"/> <!-- Setting max retries -->
        <!--        Groups that should only by run. Groups are specified in test classes next to @Test annotation-->
        <groups>
            <run>
                <include name="regression"/>
                <include name="prerequisite"/>
            </run>
        </groups>
        <!--        groups = normal, high, critical, repeatable-->
        <classes>
            <!--            <class name="Tests.Account.LoginToAccount">-->
            <!--            <class name="Tests.PreparationScripts.AccountCreationInit">-->
            <class name="Tests.Account.SignUp">
                <methods>
                    <!--                    <include name="createRandomAccount"></include>-->
                    <include name="checkPasswordMissingDigitValidation"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>